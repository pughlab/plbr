{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "watch": [
    "api/src/",
    "package.json",
    "tsconfig.api.json",
    "nodemon.api.json",
    ".env"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts,graphql"
}